{
  "type": "object",
  "id": "contact-form",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "title": "Contact Details",
  "description": "some notes",
  "links": [],
  "additionalProperties": false,
  "properties": {
    "title": {
      "title": "Title",
      "id": "order:010",
      "type": "string",
      "required": true,
      "enum": [
        "Mr",
        "Mrs",
        "Ms"
      ]
    },
    "firstName": {
      "title": "First name",
      "id": "order:020",
      "type": "string",
      "required": true
    },
    "surname": {
      "title": "Surname",
      "id": "order:030",
      "type": "string",
      "required": true,
      "description": "Family name"
    },
    "dateOfBirth": {
      "title": "Date of birth",
      "id": "order:040",
      "type": "date",
      "required": true
    },
    "numberOfCandidates": {
      "type": "integer",
      "id": "order:040",
      "required": true,
      "title": "Number of candidates"
    },
    "syllabus": {
      "type": "integer",
      "id": "order:050",
      "required": true,
      "pattern": "^[0-9]{4}$",
      "description": "4 digits",
      "title": "Syllabus"
    },
    "component": {
      "type": "integer",
      "id": "order:060",
      "required": true,
      "pattern": "^[0-9]{2}$",
      "description": "2 digits",
      "title": "Component"
    },
    "candidateFrom": {
      "type": "integer",
      "id": "order:070",
      "required": true,
      "pattern": "^[0-9]{4,8}$",
      "description": "4 to 8 digits",
      "title": "Candidate from"
    },
    "candidateTo": {
      "type": "integer",
      "id": "order:080",
      "required": true,
      "pattern": "^[0-9]{4,8}$",
      "description": "4 to 8 digits",
      "title": "Candidate to"
    }
  }
}
